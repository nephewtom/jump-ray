{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Raylib Project",
            "type": "shell",
            "command": "C:/mingw-w64/x86_64-8.1.0-win32-seh-rt_v6-rev0/mingw64/bin/g++.exe",
            "args": [
                "${workspaceFolder}/jump-ray.cpp",
                "-o", "${workspaceFolder}/jump-ray.exe",
                "-Id:/playground/raylib/src",
                "-Ld:/playground/raylib/src",
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm",
                "-Wall",
                "-Wextra",
                "-Wno-missing-field-initializers",  // <== Ignore these warnings
                "-g"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compiles the Raylib project"
        },
        {
            "label": "Run Executable",
            "type": "shell",
            "command": "${workspaceFolder}/jump-ray.exe", // Path to your .exe
            "args": [], // Command-line arguments (if any)
            "group": "none",
            "problemMatcher": [],
            "detail": "Run the compiled executable"
        }      
    ]
}
